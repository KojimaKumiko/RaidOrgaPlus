{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"env": {
		"node": true
	},
	"extends": [ "eslint:recommended", "plugin:@typescript-eslint/recommended" ],
	"rules": {
		"no-useless-catch": "off",
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": "warn",
		"@typescript-eslint/no-explicit-any": "warn"
	}
}